@model RegisterViewModel
@section Css {
    <link rel="stylesheet" href="~/inline/css/register-login.css" />
}
<div class="container d-flex mt-3">
    <div class="login-form m-auto">
        <h4 class="login-title">Регистрация аккаунта</h4>
        <form asp-controller="Account" asp-action="Register">
            <div class="row login-content">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="col-md-6 col-12">
                    <label asp-for="Email">Ваш Email</label>
                    <input type="text" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="col-md-6 col-12">
                    <label asp-for="Password">Ваш пароль</label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="col-md-12">
                    <label asp-for="PasswordConfirm">Повторите пароль</label>
                    <input asp-for="PasswordConfirm" />
                    <span asp-validation-for="PasswordConfirm" />
                </div>
                <div class="col-12">
                    <input type="submit" value="Подтвердить" class="accept-register" />
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}