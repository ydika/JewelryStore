@model LoginViewModel
@section Css {
    <link rel="stylesheet" href="~/inline/css/register-login.css" />
}
<div class="container d-flex mt-3">
    <div class="login-form m-auto">
        <h4 class="login-title">Вход в аккаунт</h4>
        <form method="post" asp-controller="Account" asp-action="Login" asp-antiforgery="true">
            <div class="row login-content">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="col-12 col-md-12">
                    <label asp-for="Email">Введите Email</label>
                    <input type="text" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="col-12">
                    <label asp-for="Password">Введите пароль</label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="col-md-12">
                    <input type="submit" value="Войти" class="accept-register" />
                </div>
                <div class="login-other">
                    <div>
                        <input asp-for="RememberMe" class="remember-input" />
                        <label asp-for="RememberMe"></label>
                    </div>
                    <a asp-controller="Account" asp-action="Register">У вас нет аккаунта?</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}