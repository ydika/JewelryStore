<div class="row" data-bind="foreach: jewelries">
    <div class="col-12 col-sm-6 col-xl-4 mb-4">
        <a class="text-black jewelry-card" title="Посмотреть подробнее" data-bind="attr:{href: url}">
            <div class="card-image">
                <img data-bind="attr:{src: imageSrc, alt: name}" />
                <div class="actions">
                    <div class="add-to-cart" data-bind="click: function(){AddToCart(id)}">
                        <img src="~/images/icons/shopping-bag.svg" />
                    </div>
                </div>
            </div>
            <div class="card-content">
                <h6 data-bind="text: name"></h6>
            </div>
            <div class="card-price">
                <span data-bind="text: 'BYN ' + price"></span>
            </div>
        </a>
    </div>
</div>
<div class="row justify-content-center" data-bind="if: jewelriesNotFound">
    <h5>Кажется у нас нет такого товара...</h5>
</div>