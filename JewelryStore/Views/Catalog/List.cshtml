@model CatalogViewModel
@{
    ViewData["Title"] = "Каталог";
    ViewData["GoldenTitle"] = "Каталог";
}

@section Css {
    <link rel="stylesheet" href="~/inline/css/catalog.css" asp-append-version="true" />
}

<div class="container">
    <div class="row mt-4">
        <div class="col-lg-4 col-xl-3">
            @await Html.PartialAsync("_Filters")
        </div>
        <div class="col-lg-8 col-xl-9">
            @await Html.PartialAsync("_Cards")
            @await Html.PartialAsync("_Paging")
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/catalog.js"></script>
}
