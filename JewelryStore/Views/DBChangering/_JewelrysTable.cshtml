@model CardsViewModel
<div class="db-container">
    <div class="title">
        <h3>Ювелирные изделия</h3>
        <a asp-action="CreateNewData">Добавить новую запись</a>
    </div>
    <hr />
    Тут будут фильтры
    <hr />
    <table class="db-table">
        <thead>
            <tr>
                <th>Фотография</th>
                <th>Название</th>
                <th>Цена</th>
                <th>Колво</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var j in Model.Jewelries)
            {
                <tr>
                    <td class="table-img">
                        <img src="@j.ImageSrc" />
                    </td>
                    <td class="table-item-name">
                        <a href="@j.Url">@j.Name</a>
                    </td>
                    <td>@j.Price</td>
                    <td>@j.Quantity</td>
                    <td>
                        <form asp-action="EditData" method="post" asp-antiforgery="true">
                            <div class="form-group">
                                <input type="number" name="id" value="@j.ID" hidden />
                                <input type="submit" class="btn btn-default table-item-edit" value="✎" />
                            </div>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteData" method="post" asp-antiforgery="true">
                            <div class="form-group">
                                <input type="number" name="id" value="@j.ID" hidden />
                                <input type="submit" class="btn btn-default table-item-delete text-danger" value="✗" />
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.PageCount > 0)
    {
        <div class="d-flex justify-content-center mt-4">
            <ul class="pagination-box overflow-auto">
                @for (int i = 1; i < Model.PageCount + 1; i++)
                {
                    <li class="@(i == Model.CurrentPage ? "active" : "")">
                        <a class="text-black" onclick="SelectedNewPage(@i, null)">@i</a>
                    </li>
                }
            </ul>
        </div>
    }

</div>