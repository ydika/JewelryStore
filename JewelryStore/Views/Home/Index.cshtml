@{
    ViewData["Title"] = "Купить ювелирные изделия - ювелирный магазин «Glatteis»";
}
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/images/cz-sharm-slajder-na-sajt-novaya-kollekciya-1900h720rh-2-1900x720-015.jpg" alt="Первый слайд" asp-append-version="true">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/cz-sharm-slajder-na-sajt-novaya-kollekciya-1900h720rh-2-1900x720-015.jpg" alt="Второй слайд" asp-append-version="true">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/cz-sharm-slajder-na-sajt-novaya-kollekciya-1900h720rh-2-1900x720-015.jpg" alt="Третий слайд" asp-append-version="true">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Предыдущий</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Следующий</span>
    </button>
</div>
